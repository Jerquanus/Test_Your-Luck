<div class="container">

    <header>
        <h1>Test Your Luck!</h1>
    </header>

    <div class="container-odds">
        <div>
            <h2>Soccer England League</h2>
            <div>
                <div id="container-teams">
                    {{!-- loop for array of teams --}}
                    {{#each teams}}
                    <p><span class="category">Team: </span><span class="teams">{{this}}</span></p>
                    {{/each}}
                    {{!-- Loop for array of odds --}}
                    <div id="odds" >
                    {{#each sites.[0].odds.spreads.odds}}
                    <p data-odds="{{this}}"><span class="category">Odds: </span>{{this}}</p>
                    {{/each}}

                    </div>
                    {{!-- New bet input --}}
                    <p><span id="userBet" class="category"></span>{{new_bet}}</p>
                    {{!-- <p><span class="category">New Reward: </span>{{new_amount}}</p> --}}


                </div>
                <div class="bet-form">
                    <form class="newBetForm">
                        <input id="newBet_input" type="number" name="bet_amount"
                            placeholder="Enter an amount to place bet!"></input>
                        <button id="new_bet-btn" type="submit" data-id="{{this.id}}">Place Bet!</button>
                    </form>
                </div>
            </div>

        </div>

        <div>
        <button  id="" class="generate_bet">Generate Bet!</button>
        </div>

        <div class="current_balance">
            <h3>Previous Wagers</h3>
            <br>
            <table class="table" id="pastWagers">
                {{#each odds}}
                <tr>
                    <th>Id</th>
                        <td>{{id}}</td>
                    <th>Team 1</th>
                        <td>{{team1}}</td>
                    <th>Team 2</th>
                        <td>{{team2}}</td>
                    <th>Bet Amount</th>
                        <td>{{bet_amount}}</td>
                    <th>Possible Reward</th>
                        <td>{{new_amount}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
        {{!-- <div id="currentBalance" class="current_balance">
            <h3>Previous Wagers: {{this.current_balance}}</h3>
            <div id="pastWagers"></div>
        </div> --}}

    </div>